<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/ch_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/loc_image"
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="100dp" />


            <TextView
                android:id="@+id/loc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Ndakaini"
                android:textSize="30dp"
                android:textStyle="bold"

                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/loc_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="2 KM"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textSize="30dp"
                android:layout_toRightOf="@id/loc_title"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"

                />

            <ImageButton
                android:id="@+id/chosen_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/loc_distance"
                android:layout_marginEnd="26dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_chev_right" />


        </RelativeLayout>


    </RelativeLayout>



</android.support.v7.widget.CardView>