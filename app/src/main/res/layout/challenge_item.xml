<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challenge Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="27dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLength="20"
        android:layout_height="wrap_content"
        android:hint="Enter Challenge Name"
        android:id="@+id/txt_challengeName"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points Awarded"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="35dp"
        android:id="@+id/lbl_challenge_points"
        android:layout_below="@id/txt_challengeName"
        android:layout_alignStart="@id/txt_challengeName" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:text="CHALLENGE"
        android:background="@color/colorRed"
        android:textColor="@color/white"
        android:padding="20dp"
        android:id="@+id/buttonChallenge"
        android:layout_below="@+id/lbl_challenge_points"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/txt_challenge_points"
        android:textSize="20sp"
        android:textColor="@color/colorRed"
        android:layout_marginStart="33dp"
        android:layout_above="@+id/buttonChallenge"
        android:layout_toEndOf="@+id/lbl_challenge_points" />
</RelativeLayout>