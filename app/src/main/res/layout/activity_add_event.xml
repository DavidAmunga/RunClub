
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.labs.tatu.runclub.AddLocationActivity"
    >
    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.labs.tatu.runclub.AddEventActivity">

        <ImageButton
            android:id="@+id/add_event_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_marginBottom="313dp"
            android:background="#00ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/add_btn" />

        <EditText
            android:id="@+id/add_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/input"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/add_event_image"
            android:ems="10"
            android:hint="Enter Event Name...."
            android:inputType="textPersonName"


            android:layout_marginTop="284dp" />

        <EditText
            android:id="@+id/add_event_details"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Enter Event Details ....."
            android:layout_below="@+id/add_event_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick an Event Date"
            android:id="@+id/btn_event_date"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/add_event_details"
            android:background="@color/primary_dark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Date"
            android:id="@+id/add_event_date"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_below="@id/btn_event_date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick an Event Time"
            android:id="@+id/btn_event_time"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/add_event_date"
            android:background="@color/primary_dark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Time"
            android:id="@+id/add_event_time"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_below="@id/btn_event_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />4

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Location"
            android:id="@+id/search_loc"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/add_event_time"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:id="@+id/add_event_loc_name"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_below="@id/search_loc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />

        <EditText
            android:id="@+id/add_event_type"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Enter Event Type ....."
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/add_event_loc_name"
            android:layout_marginTop="20dp" />
        <EditText
            android:id="@+id/add_event_fee"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Enter Event Fee....."
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/add_event_type"
            android:layout_marginTop="20dp" />
        <EditText
            android:id="@+id/add_event_attending"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Enter Event Attending....."
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/add_event_fee"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/btn_add_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD EVENT"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_below="@id/add_event_attending"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>


</ScrollView>
