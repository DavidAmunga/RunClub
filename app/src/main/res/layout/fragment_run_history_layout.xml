<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearPoints"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/txt_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POINTS"
            android:id="@+id/lbl_points"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="13dp"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearAwards"

        android:layout_marginStart="9dp"

        android:layout_below="@+id/linearPoints"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txt_awards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AWARDS"
            android:id="@+id/lbl_awards"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="13dp"
           />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_locations"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/linearAwards"
        android:layout_toEndOf="@+id/linearAwards"
        android:layout_alignBaseline="@+id/linearAwards"
        android:layout_marginStart="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:id="@+id/txt_locations"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="14dp"

            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATIONS"
            android:id="@+id/lbl_locations"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="13dp"
             />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_events"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="12dp"
        android:layout_above="@+id/spinner"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:id="@+id/txt_events"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="14dp"

            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVENTS"
            android:id="@+id/lbl_events"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="13dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_challenges"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="11dp"
        android:layout_above="@+id/spinner"
        android:layout_toStartOf="@+id/linear_events">

        <TextView
            android:id="@+id/txt_challenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHALLENGES"
            android:id="@+id/lbl_challenges"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="13dp"
            />


    </LinearLayout>


        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:layout_below="@+id/linear_locations"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/run_list"
        android:layout_below="@+id/spinner"


       >

    </android.support.v7.widget.RecyclerView>









</RelativeLayout>







